DELL_INSPIRON_7359   = 1
DELL_OPTIPLEX_7040   = 2
DELL_LATITUDE_7490   = 3
I9_9900K             = 4

SGX_STEP_PLATFORM=DELL_INSPIRON_7359
ifeq ($(LAPTOP),1)
    SGX_STEP_PLATFORM=DELL_LATITUDE_7490
endif
ifeq ($(DESKTOP),1)
    SGX_STEP_PLATFORM=DELL_OPTIPLEX_7040
endif
ifeq ($(I9),1)
    SGX_STEP_PLATFORM=I9_9900K
endif
export SGX_STEP_PLATFORM

ifndef NO_SGX
   export NO_SGX=0
endif

ifndef LIBSGXSTEP_SILENT
   export LIBSGXSTEP_SILENT=0
endif

LDFLAGS             += -z noexecstack
CFLAGS              += -DSGX_STEP_PLATFORM=$(SGX_STEP_PLATFORM) -DNO_SGX=$(NO_SGX) -DLIBSGXSTEP_SILENT=$(LIBSGXSTEP_SILENT)
